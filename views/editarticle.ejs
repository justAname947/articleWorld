<div class="row">
    <div class="col-md-12 m-auto">
        <div class="card mt-3">
            <div class="card-body">
                <h1>edit article</h1>
                <hr/>

                <form action="/articles/edit/<%=article._id%>" method="post">
                    <div class="form-group">
                        <label for="headline">Headline</label>
                        <input name="headline" value="<%=article.headline%>"class="form-control" type="text">
                    </div>

                    <div class="form-group">
                        <label for="articleContent">Article</label>
                        <textarea name="articleContent" rows="10" class="form-control"><%=article.articleContent%></textarea>
                    </div>
                    <button class="btn btn-primary" type="submit"> Submit </button>
                </form>
                
            </div>
        </div>
    </div>
</div>